generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Word {
  id            String    @id @default(uuid())
  text          String    @unique
  meaningHindi  String
  meaningGujarati String
  synonyms      Synonym[]
  antonyms      Antonym[]
  sentences     Sentence[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Synonym {
  id      String @id @default(uuid())
  word    Word   @relation(fields: [wordId], references: [id])
  wordId  String
  text    String
}

model Antonym {
  id      String @id @default(uuid())
  word    Word   @relation(fields: [wordId], references: [id])
  wordId  String
  text    String
}

model Sentence {
  id      String @id @default(uuid())
  word    Word   @relation(fields: [wordId], references: [id])
  wordId  String
  text    String
}